#!/usr/bin/env python3
"""
Interactive Angr GUI - single-file Flask app with argument presets support.

Place this file at scripts/angr_gui_interactive.py in your project root
and run: python3 scripts/angr_gui_interactive.py

Features:
 - list .py scripts under ./scripts (excluding itself)
 - optional per-script presets loaded from scripts/presets.json
 - start chosen script as subprocess, record logs under gui_results/jobs/<job_id>.log
 - endpoints for jobs, logs, cancelling
 - single-page UI: choose script, pick preset or enter free-form args, start run
"""

from flask import Flask, jsonify, request, render_template_string
import os
import subprocess
import uuid
import threading
import time
from pathlib import Path
from markupsafe import escape
import json

APPROOT = Path(__file__).resolve().parents[1]  # repo root
SCRIPTS_DIR = APPROOT / "scripts"
RESULTS_DIR = APPROOT / "gui_results" / "jobs"
RESULTS_DIR.mkdir(parents=True, exist_ok=True)

app = Flask(__name__)
app.config["JSONIFY_PRETTYPRINT_REGULAR"] = False

jobs = {}
jobs_lock = threading.Lock()

# -------------------------
# Presets loader
# -------------------------
def load_presets():
    """
    Looks for presets file at scripts/presets.json. Format example:
    {
      "advanced_angr_detector.py": [
         {"name":"fast-scan","args":"--out adv.csv --cfg fast --symbolic","desc":"fast scan config"},
         {"name":"full-scan","args":"--out adv_full.csv --cfg full --symbolic","desc":"full CFG"}
      ],
      "extended_injection_detector_v3.py": [
         {"name":"default","args":"~/processinjection/ProcessInjectionTechniques/ --out findings.csv --html report.html --yaradir yara_rules --arch-filter x64"}
      ]
    }
    """
    p = SCRIPTS_DIR / "presets.json"
    if not p.exists():
        return {}
    try:
        with p.open("r", encoding="utf-8") as fh:
            data = json.load(fh)
            # ensure it's a dict mapping script names -> list of presets
            if isinstance(data, dict):
                return data
            else:
                return {}
    except Exception:
        return {}

# Preload once (can be reloaded by client if needed)
PRESETS = load_presets()

# -------------------------
# Script listing + start job
# -------------------------
def list_scripts():
    out = []
    if not SCRIPTS_DIR.exists():
        return out
    for p in sorted(SCRIPTS_DIR.glob("*.py")):
        if p.name == Path(__file__).name:
            continue
        summary = ""
        try:
            with open(p, "r", encoding="utf-8", errors="ignore") as fh:
                for _ in range(30):
                    line = fh.readline()
                    if not line:
                        break
                    s = line.strip()
                    if s.startswith('"""') or s.startswith("'''"):
                        ds = s.strip('"""').strip("'''").strip()
                        if ds:
                            summary = ds
                        else:
                            ds2 = fh.readline().strip()
                            summary = ds2[:200]
                        break
                    elif s.startswith("#"):
                        if summary:
                            summary += " " + s.lstrip("# ").strip()
                        else:
                            summary = s.lstrip("# ").strip()
                    elif s:
                        break
        except Exception:
            summary = ""
        out.append({"name": p.name, "path": str(p), "summary": summary, "has_presets": p.name in PRESETS})
    return out

def start_job(script_name, target=None, args_text=""):
    script_path = SCRIPTS_DIR / script_name
    if not script_path.exists():
        raise FileNotFoundError(script_name)
    job_id = str(uuid.uuid4())[:8]
    log_path = RESULTS_DIR / f"{job_id}.log"
    python_exe = os.environ.get("VIRTUAL_ENV_PYTHON") or "python3"
    cmd = [python_exe, str(script_path)]
    if target:
        cmd.append(str(target))
    if args_text:
        import shlex
        try:
            extra = shlex.split(args_text)
        except Exception:
            extra = args_text.split()
        cmd += extra

    logfile = open(log_path, "w", encoding="utf-8", errors="ignore")
    proc = subprocess.Popen(cmd, stdout=logfile, stderr=subprocess.STDOUT, cwd=str(APPROOT))
    job = {
        "id": job_id,
        "script": script_name,
        "cmdline": " ".join(escape(x) for x in cmd),
        "proc": proc,
        "log_path": str(log_path),
        "start_time": time.time(),
        "end_time": None,
        "status": "running",
    }
    with jobs_lock:
        jobs[job_id] = job

    def monitor(jobid, p, logfile):
        p.wait()
        logfile.close()
        with jobs_lock:
            j = jobs.get(jobid)
            if j:
                j["end_time"] = time.time()
                j["status"] = "done" if p.returncode == 0 else f"exited({p.returncode})"

    t = threading.Thread(target=monitor, args=(job_id, proc, logfile), daemon=True)
    t.start()
    return job

# -------------------------
# Flask endpoints
# -------------------------
@app.route("/scripts_list")
def scripts_list():
    return jsonify(list_scripts())

@app.route("/presets")
def presets():
    """Return presets mapping for client-side use."""
    return jsonify(PRESETS)

@app.route("/run", methods=["POST"])
def run_script():
    data = request.get_json() or {}
    script = data.get("script")
    if not script:
        return jsonify({"error": "no script specified"}), 400
    target = data.get("target")
    args_text = data.get("args", "")
    try:
        job = start_job(script, target=target, args_text=args_text)
    except FileNotFoundError:
        return jsonify({"error": "script not found"}), 404
    except Exception as e:
        return jsonify({"error": str(e)}), 500
    return jsonify({
        "id": job["id"],
        "script": job["script"],
        "log_path": job["log_path"],
        "status": job["status"],
        "cmdline": job["cmdline"],
    })

@app.route("/jobs")
def get_jobs():
    with jobs_lock:
        js = []
        for jid, j in jobs.items():
            js.append({
                "id": j["id"],
                "script": j["script"],
                "status": j["status"],
                "start_time": j["start_time"],
                "end_time": j.get("end_time"),
                "log_path": j["log_path"],
                "cmdline": j["cmdline"],
            })
    js = sorted(js, key=lambda x: x["start_time"], reverse=True)
    return jsonify(js)

@app.route("/job/<job_id>/log")
def job_log(job_id):
    tail_lines = int(request.args.get("tail", "200"))
    with jobs_lock:
        j = jobs.get(job_id)
    if not j:
        return jsonify({"error": "job not found"}), 404
    p = Path(j["log_path"])
    if not p.exists():
        return jsonify({"log": ""})
    try:
        with p.open("rb") as fh:
            fh.seek(0, os.SEEK_END)
            filesize = fh.tell()
            size = 8192
            data = b""
            while tail_lines > 0 and filesize > 0:
                read_size = min(size, filesize)
                fh.seek(filesize - read_size)
                chunk = fh.read(read_size) + data
                lines = chunk.splitlines()
                if len(lines) > tail_lines:
                    data = b"\n".join(lines[-tail_lines:])
                    break
                else:
                    data = chunk
                filesize -= read_size
                size *= 2
        text = data.decode("utf-8", errors="ignore")
    except Exception as e:
        text = f"Error reading log: {e}\n"
    return jsonify({"log": text})

@app.route("/job/<job_id>/cancel", methods=["POST"])
def cancel_job(job_id):
    with jobs_lock:
        j = jobs.get(job_id)
    if not j:
        return jsonify({"error": "job not found"}), 404
    proc = j.get("proc")
    if proc and proc.poll() is None:
        try:
            proc.terminate()
            time.sleep(0.5)
            if proc.poll() is None:
                proc.kill()
            with jobs_lock:
                j["status"] = "killed"
                j["end_time"] = time.time()
            return jsonify({"ok": True, "status": j["status"]})
        except Exception as e:
            return jsonify({"error": str(e)}), 500
    else:
        return jsonify({"error": "process not running", "status": j.get("status")})

